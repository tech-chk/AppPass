<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.chklab.apppass.app.TreasureActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/textView">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <com.android.volley.toolbox.NetworkImageView
                    android:layout_width="256dp"
                    android:layout_height="128dp"
                    android:id="@+id/imageCoverPhoto"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/linearLayout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="詳細"
                    android:id="@+id/textView11"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="チェックアウト"
                        android:id="@+id/btnCheckout"
                        android:layout_gravity="right" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="9999年99月99日"
                    android:id="@+id/textDate" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="タイトル"
                    android:id="@+id/textTitle" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="詳細"
                    android:id="@+id/textDetail" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="獲得/Acquisition"
                    android:id="@+id/textView3" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.android.volley.toolbox.NetworkImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:id="@+id/ivt1"
                        android:background="@drawable/notstamp"
                        android:src="@drawable/notstamp"/>
                    <com.android.volley.toolbox.NetworkImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:id="@+id/ivt2"
                        android:background="@drawable/notstamp"
                        android:src="@drawable/notstamp"/>
                    <com.android.volley.toolbox.NetworkImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:id="@+id/ivt3"
                        android:background="@drawable/notstamp"
                        android:src="@drawable/notstamp"/>
                    <com.android.volley.toolbox.NetworkImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:id="@+id/ivt4"
                        android:background="@drawable/notstamp"
                        android:src="@drawable/notstamp"/>
                    <com.android.volley.toolbox.NetworkImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:id="@+id/ivt5"
                        android:background="@drawable/notstamp"
                        android:src="@drawable/notstamp"/>

                    </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="センサー/Sensor"
                    android:id="@+id/textView3" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="距離："
                    android:id="@+id/textDetail" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="999"
                    android:id="@+id/txtKyori" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="m"
                    android:id="@+id/textDetail" />

                </LinearLayout>

                <ImageView
                    android:layout_width="126dp"
                    android:layout_height="126dp"
                    android:id="@+id/ivSenser"
                    android:src="@drawable/senser0"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:background="@android:color/darker_gray">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="記念スタンプ"
                    android:id="@+id/textView11"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <com.android.volley.toolbox.NetworkImageView
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:id="@+id/imageStamp"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
